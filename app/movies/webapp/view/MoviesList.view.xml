<mvc:View
	controllerName="movies.controller.MoviesList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page id="page">
		<content>
			<Table
				id="idProductsTable"
				inset="false"
				items="{
					path: '/Movies',
					sorter: {
						path: 'title'
					}
				}"
				width="auto"
				class="sapUiResponsiveMargin"
				itemPress="onItemPress">
				<headerToolbar>
					<OverflowToolbar id="_IDGenOverflowToolbar1">
						<content>
							<Title id="_IDGenTitle1" text="Movies" level="H2"/>
							<ToolbarSpacer id="_IDGenToolbarSpacer1" />
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column id="_IDGenColumn1">
						<Text id="_IDGenText1" text="Title" />
					</Column>
					<Column id="_IDGenColumn2"
						demandPopin="true">
						<Text id="_IDGenText2" text="Description" />
					</Column>
					<Column id="_IDGenColumn3"
						demandPopin="true"
						hAlign="End">
						<Text id="_IDGenText3" text="Director" />
					</Column>
					<Column id="_IDGenColumn4"
						width="12em">
						<Text id="_IDGenText4" text="Genre" />
					</Column>
					<Column id="_IDGenColumn5"
						width="12em">
						<Text id="_IDGenText5" text="Release Date" />
					</Column>
					<Column id="_IDGenColumn6"
						width="12em">
						<Text id="_IDGenText61" text="Duration" />
					</Column>
				</columns>
				<items>
					<ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Active">
						<cells>
							<ObjectIdentifier id="_IDGenObjectIdentifier1"
								title="{title}"/>
							<Text id="_IDGenText6"
								text="{description}" />
							<Text id="_IDGenText7"
								text="{director/name}" />
							<Text id="_IDGenText8"
								text="{genre/name}" />
							<Text id="_IDGenText9"
								text="{releaseDate}" />
							<Text id="_IDGenText10"
								text="{duration}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>