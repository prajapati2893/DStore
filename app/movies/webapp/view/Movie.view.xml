<mvc:View
	height="100%"
	controllerName="movies.controller.Movie"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="idPage"
		title="{title}"
		class= "sapUiResponsivePadding--header"
        showNavButton="true"
        navButtonPress="onNavBack" >
		<!-- this CSS class add a standard spacing to all the page content -->

		<content>
			<ObjectHeader id="_IDGenObjectHeader1"
				title=""
				backgroundDesign="Solid">
				<attributes>
					<ObjectAttribute id="_IDGenObjectAttribute1" title="Name" text="{title}" />
					<ObjectAttribute id="_IDGenObjectAttribute2" title="Description" text="{description}" />
					<ObjectAttribute id="_IDGenObjectAttribute3" title="Director" text="{director/name}" active="true" press="onDirectorPressed"/>
                    <ObjectAttribute id="_IDGenObjectAttribute4" title="Genre" text="{genre/name}" />
                    <ObjectAttribute id="_IDGenObjectAttribute5" title="Release Date" text="{releaseDate}" />
                    <ObjectAttribute id="_IDGenObjectAttribute6" title="Duration" text="{duration} mins" />
					<ObjectAttribute id='rating'>
					</ObjectAttribute>
				</attributes>
			</ObjectHeader>
			<Label id="ratingLabel" text="Rating :" class="sapUiResponsiveMargin"></Label>
			<RatingIndicator id="RI_default" maxValue="5" class="sapUiResponsiveMargin" value="{rating}" tooltip="Rating Tooltip" change="onRatingChanged"/>

			<Table 
            id="_IDGenTable1" 
            width="auto" 
            class="sapUiResponsiveMargin"
            items="{
					path: 'actors',
                    parameters:{
                        expand: 'actor'
                    }
				}"
            itemPress="onActorItemPressed"
            >
                <headerToolbar>
					<OverflowToolbar id="_IDGenOverflowToolbar1">
						<content>
							<Title id="_IDGenTitle1" text="Actors" level="H2"/>
							<ToolbarSpacer id="_IDGenToolbarSpacer1" />
						</content>
					</OverflowToolbar>
				</headerToolbar>
                <columns>
					<Column id="_IDGenColumn1">
						<Text id="_IDGenText1" text="Name" />
					</Column>
					<Column id="_IDGenColumn2">
						<Text id="_IDGenText2" text="Country" />
					</Column>
				</columns>
                <items>
					<ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Active">
						<cells>
							<Text id="_IDGenText6"
								text="{actor/name}" />
							<Text id="_IDGenText7"
								text="{actor/country/name}" />
						</cells>
					</ColumnListItem>
				</items>
            </Table>
            <Table id="_IDOtherMovies" width="auto" class="sapUiResponsiveMargin"
            items="{
					path: 'director/movies'
				}"
                itemPress="onMovieItemPressed">
                <headerToolbar>
					<OverflowToolbar id="_IDGenOverflowToolbar2">
						<content>
							<Title id="_IDGenTitle2" text="Other movies from {director/name}" level="H2"/>
							<ToolbarSpacer id="_IDGenToolbarSpacer3" />
						</content>
					</OverflowToolbar>
				</headerToolbar>
                 <columns>
					<Column id="_IDGenColumnOM1">
						<Text id="_IDGenTextOM1" text="Title" />
					</Column>
					<Column id="_IDGenColumnOM2">
						<Text id="_IDGenTextOM2" text="Genre" />
					</Column>
                    <Column id="_IDGenColumnOM3">
						<Text id="_IDGenTextOM3" text="Release Date" />
					</Column>
				</columns>
                <items>
					<ColumnListItem id="_IDGenColumnListItemOM1" vAlign="Middle" type="Active">
						<cells>
							<Text id="_IDGenTextOM5"
								text="{title}" />
							<Text id="_IDGenTextOM6"
								text="{genre/name}" />
                            <Text id="_IDGenTextOM7"
								text="{releaseDate}" />
						</cells>
					</ColumnListItem>
                </items>
            </Table>
			
		</content>
	</Page>
</mvc:View>
