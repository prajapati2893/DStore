<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	<HBox id="rating">
		<RatingIndicator core:require="{ handler: 'books/ext/fragment/RatingFragment'}" id="RI_default" maxValue="5" class="" value="{rating}" tooltip="Rating Tooltip" change="handler.onRatingChanged"/>
		<Button core:require="{ handler: 'books/ext/fragment/RatingFragment'}" class="sapUiResponsiveMargin" id="reset" text="Reset" press="handler.onReset"></Button>
	</HBox>
</core:FragmentDefinition>